<mapper namespace="com.myproject.parking.lib.mapper.TransactionMapper">
     <insert id="createTransaction" parameterType="TransactionVO" useGeneratedKeys="true" keyProperty="id">      
    	insert into transaction(customer_first_name,name_item,total_price_idr,payment_type,
    	bank,transaction_status,fraud_status,approval_code,transaction_id,signature_key,
    	email_notification,email_notification_reason,order_id,created_on,created_by,updated_on,updated_by)
    		values(#{customerFirstName}, #{nameItem}, #{totalPriceIdr}, #{paymentType},
    		 #{bank}, #{transactionStatus},#{fraudStatus},#{approvalCode},#{transactionId},#{signatureKey},#{emailNotification}, 
    		 #{emailNotificationReason}, #{orderId}, #{createdOn}, #{createdBy}, #{updatedOn}, #{updatedBy})  	
     </insert>
 
     <update id="updateTransactionStatus" parameterType="java.util.Map" >
    	UPDATE transaction SET transaction_status = #{transactionStatus},fraud_status = #{fraudStatus},approval_code = #{approvalCode},
    	transaction_id = #{transactionId},signature_key = #{signatureKey},bank = #{bank},
    	email_notification = #{emailNotification}, email_notification_reason = #{emailNotificationReason},
    	payment_type = #{paymentType},updated_on = #{updatedOn}, 
    	updated_by = #{updatedBy} 
    	WHERE order_id = #{orderId} 	    	
     </update>
     
     <update id="updateEmailNotification" parameterType="java.util.Map" >
    	UPDATE transaction SET email_notification = #{emailNotification},email_notification_reason = #{emailNotificationReason}
    	WHERE payment_order_id = #{orderId} 	    	
     </update>
</mapper>